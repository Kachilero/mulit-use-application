{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "baseUrl": "./",
    "rootDir": "./",
    "jsx": "preserve",
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "pretty": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2015", "es6", "es7", "dom"],
    "types": ["react", "jest", "node"],
    "outDir": "app/dist"
  },
  "exclude": ["node_modules", "**/node_modules/*", "test/e2e"]
}

